import java.sql.*;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) throws SQLException {


        InfoMaProvider infoMaProvider = new StudentInfo();

        Scanner scanner = new Scanner(System.in);

        System.out.print("Are you a teacher or a student? (teacher/student) ");
        String userType = scanner.nextLine().toLowerCase();

        if (userType.equals("teacher")) {
            System.out.println("what to do?");
            String input = scanner.nextLine();

            if ("add scores".equals(input)) {
                ToAdd.main(new String[]{});
            } else if ("change scores".equals(input)) {
                ToChange.main(new String[]{});
            } else if("add new".equals(input)){
                AddWhat.main(new String[]{});
            }
            else {
                System.out.println("Invalid input!");
            }
        } else if (userType.equals("student")) {
            StudentInfo.main(new String[]{});
            infoMaProvider = new StudentInfo();

        }
        infoMaProvider.displayInfo();

    }
}
